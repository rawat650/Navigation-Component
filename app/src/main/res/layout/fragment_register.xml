                    android:text="Female"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/radioGroupButton" />
            </RadioGroup>

-->
            <RadioGroup
                android:id="@+id/radioGroupButton"
                android:layout_width="156dp"
                android:layout_height="38dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="33.33dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGender">
                <RadioButton android:id="@+id/radioBtnMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"/>
                <RadioButton android:id="@+id/radioBtnFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="female"/>
            </RadioGroup>
            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="33.33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="33.33dp"
                app:layout_constraintTop_toBottomOf="@id/radioGroupButton"
                android:text="Password"
                android:textStyle="bold">
            </TextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txtpassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="33.33dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="33.33dp"
                android:ems="10"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPassword">
            </androidx.appcompat.widget.AppCompatEditText>


            <TextView
                android:id="@+id/CnfrmPassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="33.33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="33.33dp"
                app:layout_constraintTop_toBottomOf="@id/txtpassword"
                android:text="Confirm Password"
                android:textStyle="bold">
            </TextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txtCnfrmpassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="33.33dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="33.33dp"
                android:ems="10"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CnfrmPassword">
            </androidx.appcompat.widget.AppCompatEditText>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btnNext"
                app:layout_constraintTop_toBottomOf="@id/txtCnfrmpassword"
                android:layout_marginStart="33.33dp"
                android:layout_marginEnd="33.33dp"
                android:backgroundTint="@color/purple_700"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </androidx.appcompat.widget.AppCompatButton>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>